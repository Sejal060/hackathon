{
  "name": "Judging Reminder Workflow",
  "nodes": [
    {
      "type": "scheduleTrigger",
      "name": "Check Submissions",
      "parameters": {
        "triggerTimes": {
          "item": [
            {
              "mode": "everyX",
              "value": 1,
              "unit": "hours"
            }
          ]
        }
      }
    },
    {
      "type": "httpRequest",
      "name": "Get Submissions",
      "parameters": {
        "method": "GET",
        "url": "={{ $parameter[\"backendUrl\"] || \"http://localhost:8001/admin/submissions\" }}",
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "type": "emailSend",
      "name": "Notify Judges",
      "parameters": {
        "to": "={{ $parameter[\"judgeEmails\"] || \"judges@example.com\" }}",
        "subject": "New Hackathon Submissions for Review",
        "text": "={{ 'There are new submissions to review. Please check the dashboard.' }}"
      }
    }
  ],
  "active": false,
  "settings": {
    "executionOrder": "v1"
  }
}